{
    "openapi": "3.0.1",
    "info": {
        "version": "1.0.0",
        "title": "Chat API",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3004"
        }
    ],
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/api/login": {
            "post": {
                "tags": ["Login"],
                "summary": "Log in",
                "requestBody": {
                    "description": "Credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Credentials"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK. Successful login."
                    },
                    "400": {
                        "description": "Bad request."
                    },
                    "401": {
                        "description": "Unauthorized. Incorrect password."
                    },
                    "404": {
                        "description": "User does not exist."
                    }
                }
            }

        },
        "/api/users": {
            "get": {
                "tags": ["Users"],
                "summary": "Get all users",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            },
            "post": {
                "tags": ["Users"],
                "summary": "Post a new user to the database",
                "requestBody": {
                    "description": "Properties of the new user",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/NewUser"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "User created",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    "400": {
                        "description": "Failed. Bad post data."
                    }
                }
            },
            "delete": {
                "summary": "Delete a user from the database",
                "description": "Delete a user from the database. Requires authentication with /api/login and admin privileges. Json web token from succesful login should be included in the Authorization header. Use the lock symbol to include token.",
                "tags": ["Users"],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "description": "Username of the user",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/UserToDelete"
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Successfully deleted"
                    },
                    "400": {
                        "description": "Bad request."
                    },
                    "401": {
                        "description": "Invalid token"
                    }
                }
            }
        },
        "/api/users/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of the user",
                    "type": "string"
                }
            ],
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get user with given ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "User with id",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "User not found."
                    }
                }
            }
        }
    },
    "definitions": {
        "id": {
            "properties": {
                "uuid": {
                    "type": "string"
                }
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "number"
                },
                "username": {
                    "type": "string"
                },
                "realname": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "NewUser": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "realname": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "example": {
                "username": "mattivirtanen",
                "realname": "mattivirtanen",
                "password": "salasana123",
                "type": "user"
            }
        },
        "UserToDelete": {
            "type": "object",
            "properties": {
                "userToDelete": {
                    "type": "string"
                }
            },
            "example": {
                "userToDelete": "mattivirtanen"
            }
        },
        "Credentials": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "username": "root",
                "password": "secret"
            }
        }
    }
}
